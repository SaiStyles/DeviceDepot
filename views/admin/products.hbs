<section >
    <div class="container">

        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto " >Add products </a>

        </div>

        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>image</th>
                    <th>options</th>
                    
                </tr>
            </thead>
            
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.no}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px;height:50px" src="/images/{{this._id}}.jpg"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                         <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="confirm('Are you sure you want to delete this product{{this.Name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>

$( function () {
    $('#productsTable').DataTable();
});
</script>